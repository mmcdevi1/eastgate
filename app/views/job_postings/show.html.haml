%h1= @job_posting.title
%h3.text-muted= "#{@job_posting.location} - HQ"
.apply-now
  .row
    .col-sm-12
      .pull-left.m-t
        = link_to 'Back to Careers', career_applications_path, class: 'text-link'
      .pull-right
        = link_to 'Apply Now', '#application_form', class: 'btn btn-info'
.job-posting-description
  = markdown @job_posting.description
.job-application-form
  #application_form.application-form
    %h1 Please submit your application for review
    = form_for [@job_posting, CareerApplication.new], html: {class: 'form-horizontal', role: 'form'} do |f|
      / - if CareerApplication.new.errors.any?
      /   #error_explanation.alert.alert-danger.alert-dismissable
      /     %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} Ã—
      /     %h4
      /       = pluralize(CareerApplication.new.errors.count, "error")
      /       prohibited this listing from being saved:
      /     %ul
      /       - CareerApplication.new.errors.full_messages.each do |msg|
      /         %li= msg
      .form-group
        = f.label :first_name, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :first_name, class: 'form-control'
      .form-group
        = f.label :last_name, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :last_name, class: 'form-control'
      .form-group
        = f.label :email, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :email, class: 'form-control'
      .form-group
        = f.label :phone, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :phone, class: 'form-control'
      .form-group
        = f.label :cover_letter, 'Cover Letter', class: 'col-sm-2 control-label'
        .col-sm-10
          = f.file_field :cover_letter, as: :file, class: "filestyle", id: "image_uploader_cover_letter", style: "position: fixed; left: -500px;"
          .bootstrap-filestyle{:style => "display: inline;"}
            %label.btn.btn-default.btn-small.fileinput-button{:for => "image_uploader_cover_letter"}
              %i.glyphicon.glyphicon-cloud-upload
              %span Upload Cover Letter
            %span#file_name_2.text-muted
      .form-group
        = f.label :resume, 'Resume', class: 'col-sm-2 control-label'
        .col-sm-10
          = f.file_field :resume, as: :file, class: "filestyle", id: "image_uploader", style: "position: fixed; left: -500px;"
          .bootstrap-filestyle{:style => "display: inline;"}
            %label.btn.btn-default.btn-small.fileinput-button{:for => "image_uploader"}
              %i.glyphicon.glyphicon-cloud-upload
              %span Upload Resume
            %span#file_name.text-muted
      .submit
        .row
          .col-sm-10.col-sm-offset-2
            = f.submit "Submit", class: "btn btn-info btn-block"