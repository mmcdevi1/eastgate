%html
  = render 'shared/head'
  %body.hatch
    .app.app-header-fixed
      = render 'layouts/hatch/header'
      = render 'shared/flash'
      = render 'layouts/hatch/aside'
      #content.app-content{:role => "main"}
        .app-content-body
          .hbox.hbox-auto-xs.hbox-auto-sm{"ng-init" => "\n            app.settings.asideFolded = false; \n            app.settings.asideDock = false;\n          "}
            / main
            .col
              = render 'layouts/hatch/property_header'
              .hbox
                = render 'approval'
                = yield

