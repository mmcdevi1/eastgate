!!!
%html
  = render 'shared/head'
  %body.hatch
    .app.app-header-fixed
      = render 'layouts/hatch/header'
      = render 'shared/flash'
      = render 'layouts/hatch/aside'
      #content.app-content{:role => "main"}
        .app-content-body
          .hbox.hbox-auto-xs.hbox-auto-sm{"ng-init" => "\n            app.settings.asideFolded = false; \n            app.settings.asideDock = false;\n          "}
            / main
            .col
              .property-header.b-b
                .wrapper-lg
                  .breadcrumbs.clearfix
                    = render_breadcrumbs :tag => 'div class="breadcrumb-item"'
                  .clearfix
                    = image_tag(@asset.asset_image.url(:thumb), class: "img-responsive")
                    .m-b
                      %span.label.bg-info Something
                    .property-info
                      %h4= @asset.name
                      %p= @asset.full_address
              .wrapper-lg
                = yield
              = render 'layouts/hatch/footer'