%section
  %h4 Client Assets
.table-wrap
  .table-wrap-header
    .clearfix
      .pull-right
        = link_to 'Add New Asset', new_admin_asset_path, class: 'btn btn-info'
  %table.table
    %thead
      %tr
        %th Name
        %th Client
        %th Actions
    %tbody
      - @assets.each do |asset|
        %tr
          %td= asset.name
          %td
            - unless asset.client.nil?
              = asset.client.name
          %td
            = link_to "Hatch", asset_path(asset)
            = link_to "Show", admin_asset_path(asset)
            = link_to "Edit", edit_admin_asset_path(asset)
            = link_to "Delete", admin_asset_path(asset), method: :delete
