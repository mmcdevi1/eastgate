.row
  .col-sm-12
    = form_for [:admin, @asset], html: {class: 'form-horizontal'} do |f|
      .form-group
        .row
          = f.label :name, class: 'col-lg-2 control-label'
        .row
          .col-lg-12
            = f.text_field :name, class: 'form-control'
      .form-group
        .row
          = f.label :address, class: 'col-lg-2 control-label'
        .row
          .col-lg-12
            = f.text_field :address, class: 'form-control'
      .form-group
        = f.label :state, "State"
        .btn-group.m-r
          %button.btn.btn-default.dropdown-toggle.no-text-shadow{"data-toggle" => "dropdown"}
            %span.dropdown-label{"data-placeholder" => "Please select"}= state_select
            %span.caret{:style => "margin-left:30px;"}
          %ul.dropdown-menu.dropdown-select.max-height-400
            - us_states.each do |state|
              %li
                %a{:href => "#"}
                  = f.radio_button :state, state.first
                  = state.first
      = f.submit 'Save', class: 'btn btn-info btn-fixed btn-lg'