    / For leasify.co
    %script{:src => "//use.typekit.net/ckw2lgb.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}
  - elsif Rails.env.development?
    / for lvh.me, remove when pushing to git and heroku
    %script{:src => "//use.typekit.net/bgg6ayr.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}
